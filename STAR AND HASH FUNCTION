#include<stdio.h>
void star(int n),hash(int n);
void star(int n)
{
    int i,j;
    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}
void hash(int n)
{
    int i,j;
    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            printf("#");
        }
        printf("\n");
    }
}
int main()
{
    int a;
    int s;
    printf("enter the no.of rows");
    scanf("%d",&a);
    printf("what kind of pettern want\n");
    printf("1-star pattern\n 2-hash pattern");
    scanf("%d",&s);
    if(s==1)
    star(a);
    else
    hash(a);
    return 0;
}
