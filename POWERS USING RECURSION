#include<stdio.h>
#include<math.h>
int power(int n,int m);
int result=1;
int power(int n,int m)
{
    while(m==0)
    {
    return result;
    }
    result=result*n;
    power(n,m-1);
    return  result;
}
int main()
{
    int b,e;
    printf("enter the base\n");
    scanf("%d",&b);
    printf("enter the exponent\n");
    scanf("%d",&e);
    printf("the result is %d\n",power(b,e));
    return 0;
}
